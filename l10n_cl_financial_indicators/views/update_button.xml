<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_financial_indicators_form" model="ir.ui.view">
        <field name="name">financial.indicators.form</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/div[@name='button_box']" position="inside">
                <button string="Update Currency" type="object" name="action_update_currency" class="oe_stat_button" icon="fa-magnet" attrs="{'invisible':[('name', 'not in', ['USD', 'UF', 'UTM', 'EUR'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>
